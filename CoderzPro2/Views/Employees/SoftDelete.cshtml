@model Employee
@{
    ViewData["Title"] = "Soft Delete";
}

<h1> Are you sure to Delete <span class="text-danger">@Model.Name </span>  ?</h1>

<form method="post" asp-action="SoftDelete">
    @Html.HiddenFor(x => x.EmployeeId)
    <input type="submit" value="Sure,Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-warning">Cancel</a>
</form>